name: CI/CD Pipeline

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3

      - name: Login DockerHub
        run: echo "${{ secrets.DOCKER_PASS }}" | docker login -u "${{ secrets.DOCKER_USER }}" --password-stdin

      - name: Build & Push Backend
        run: |
          docker build -t soni841/backend ./backend
          docker push soni841/backend

      - name: Build & Push Frontend
        run: |
          docker build -t soni841/frontend ./frontend
          docker push soni841/frontend

      - name: Deploy to VM
        uses: appleboy/ssh-action@v0.1.6
        with:
          host: ${{ secrets.VM_IP }}
          username: ubuntu
          key: ${{ secrets.VM_KEY }}
          script: |
            cd crud-mean-devops
            docker-compose pull
            docker-compose up -d
